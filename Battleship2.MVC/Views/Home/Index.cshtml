@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <button type="button" class="btn btn-primary btn-lg" onclick="window.location.href='@Url.Action("Index", "Statistics")';">Game Statistics</button>
    @if (User.Identity.IsAuthenticated)
    {
        <button type="button" class="btn btn-primary btn-lg" id="createButton">Start Game</button>
        <button type="button" class="btn btn-primary btn-lg" id="connectButton">Connect to Game</button>

    }

    <script>
        $(document).ready(function ()
        {
            $('#connectButton').on('click', function () {
                var gameid = window.prompt("Please, enter game's id");
                if (gameid != "" && gameid != null) {
                    var urlstring = "@Html.Raw(@Url.Action("Game", "Game", new { @gameId = "gameid_placeholder", @isCreated = false }))";
                    urlstring = urlstring.replace("gameid_placeholder", gameid);
                    window.location.href = urlstring;
                }
            })
            $('#createButton').on('click', function () {
                window.location.href = '@Html.Raw(@Url.Action("Game", "Game", new { @gameId = "", @isCreated = true }))'
            })
});
    </script>
</div>
